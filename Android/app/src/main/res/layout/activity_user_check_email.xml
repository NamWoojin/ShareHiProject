<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/activity_user_check_width"
    android:layout_height="@dimen/activity_user_check_height"
    android:layout_gravity="center"
    tools:context=".ui.user.CheckEmailActivity">
    <TextView
        android:id="@+id/activity_check_email_info_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/activity_user_check_text_size"
        android:layout_marginHorizontal="@dimen/activity_user_check_textInputLayout_marginHorizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_check_email_time_textView"
        app:layout_constraintVertical_chainStyle="spread"
        />
    <TextView
        android:id="@+id/activity_check_email_time_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orangeRed"
        android:layout_marginHorizontal="@dimen/activity_user_check_textInputLayout_marginHorizontal"
        app:layout_constraintTop_toBottomOf="@id/activity_check_email_info_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_check_email_text_input_layout"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_check_email_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_user_check_textInputLayout_height"
        android:layout_marginHorizontal="@dimen/activity_user_check_textInputLayout_marginHorizontal"
        android:hint="@string/activity_check_email_textInputLayout_hint"
        app:layout_constraintTop_toBottomOf="@id/activity_check_email_time_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_check_email_cancel_button"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_check_email_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/activity_check_email_cancel_button"
        android:layout_width="@dimen/activity_user_check_button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_user_check_button_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_check_email_text_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_check_email_ok_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:text="@string/activity_check_email_cancel_button"
        />
    <Button
        android:id="@+id/activity_check_email_ok_button"
        android:layout_width="@dimen/activity_user_check_button_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_user_check_button_margin"
        app:layout_constraintTop_toTopOf="@id/activity_check_email_cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/activity_check_email_cancel_button"
        app:layout_constraintStart_toEndOf="@id/activity_check_email_cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/activity_check_email_ok_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>