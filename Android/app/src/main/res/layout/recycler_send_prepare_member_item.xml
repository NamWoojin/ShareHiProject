<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.android.data.viewmodel.SendViewModel" />
        <variable
            name="pos"
            type="Integer" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/recycler_prepare_member_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recycler_prepare_member_imageView"
            android:layout_width="@dimen/recycler_prepare_member_imageView_height"
            android:layout_height="@dimen/recycler_prepare_member_imageView_height"
            android:layout_marginVertical="@dimen/recycler_prepare_member_margin"
            android:src="@color/gray"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_prepare_member_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/recycler_folder_imageView_margin"
            android:text="@{viewModel.getMemberName(pos)}"
            app:layout_constraintBottom_toBottomOf="@id/recycler_prepare_member_imageView"
            app:layout_constraintStart_toEndOf="@id/recycler_prepare_member_imageView"
            app:layout_constraintTop_toTopOf="@id/recycler_prepare_member_imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/recycler_prepare_member_imageView"
            app:layout_constraintStart_toEndOf="@id/recycler_prepare_member_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recycler_prepare_member_imageView"
            app:layout_constraintHorizontal_bias="1"
            android:contentDescription="@string/imageView_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>